definition Cones_functoriality (F : J ‚Üù C) (G : C ‚Üù D) : (Cone F) ‚Üù (Cone (F ‚ãô G)) := 
{ onObjects     := Œª X,     { cone_point    := G +> X.cone_point,
                              cone_maps     := Œª j, G &> (X.cone_maps j), 
                              commutativity := begin
                                                 -- `obviously'` says:
                                                 intros,
                                                 simp,
