@[extensionality] lemma is_kernel.ext {f : Y ‚ü∂ Z} {Œπ : X ‚ü∂ Y} (P Q : is_kernel f Œπ) : P = Q :=
begin cases P, cases Q, obviously end

structure kernel (f : Y ‚ü∂ Z) :=
